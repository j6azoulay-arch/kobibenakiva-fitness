            <svg viewBox="0 0 24 24" aria-hidden="true" style="transform:scaleX(-1)"><path d="M8.7 12l3.6-3.6-1.4-1.4L4.9 13l6 6 1.4-1.4L8.7 14H20v-2H8.7z"/></svg>
          </div>

          <img src="assets/before-after/1-before.png" alt="לפני" width="1080" height="1350" decoding="async">
          <img src="assets/before-after/1-after.png" alt="אחרי" class="after" width="1080" height="1350" decoding="async">
          <input type="range" min="0" max="100" value="50" class="slider" aria-label="השוואת לפני ואחרי">
        </div>
        <p class="subtle" style="margin-top:12px; text-align:center">טיפ: הזיזו את המחוון (הכפתור העגול) כדי לראות את ההבדל בין <b>לפני</b> ל-<b>אחרי</b>.</p>
      </div>
      <div class="actions" style="margin-top:12px; justify-content:center; display:flex;">
        <a class="btn btn-primary" href="#lead">רוצה תוצאה דומה? השאר/י פרטים</a>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer style="padding:28px 0; border-top:1px solid #ffffff12; color:var(--muted)">
    <div class="container" style="display:flex; justify-content:space-between; gap:12px; align-items:center; flex-wrap:wrap">
      <div>© <span id="year"></span> Kobi Ben Akiva. כל הזכויות שמורות.</div>
      <div class="subtle">טלפון: <a href="tel:+972505069235">050-5069235</a> · וואטסאפ: <a href="https://wa.me/972505069235" target="_blank" rel="noopener">לחץ לשיחה</a></div>
    </div>
  </footer>

  <a class="sticky-cta" href="#lead" aria-label="קבלו תכנית מותאמת אישית">קבלו תכנית מותאמת</a>

  <script>
    const WA_NUMBER = "972505069235";

    function buildWAText(){
      const name = document.getElementById('name')?.value?.trim() || "";
      const phone = document.getElementById('phone')?.value?.trim() || "";
      const email = document.getElementById('email')?.value?.trim() || "";
      const goal = document.getElementById('goal')?.value || "";
      const time = document.getElementById('time')?.value || "";
      const msg  = document.getElementById('msg')?.value?.trim() || "";
      const text = `שלום, אני מעוניין/ת בייעוץ:
שם: ${name}
טלפון: ${phone}
אימייל: ${email}
יעד אימון: ${goal}
שעה מועדפת: ${time}
הודעה: ${msg}`;
      return encodeURIComponent(text);
    }
    function openWA(){ window.open(`https://wa.me/${WA_NUMBER}?text=${buildWAText()}`, '_blank', 'noopener'); }

    // חיבורי וואטסאפ
    document.getElementById('waTop')?.addEventListener('click', openWA);
    document.getElementById('waHero')?.addEventListener('click', openWA);
    document.getElementById('waBtn')?.addEventListener('click', openWA);
    document.getElementById('waServices')?.addEventListener('click', openWA);

    // שנה דינמית לפוטר
    document.getElementById('year').textContent = new Date().getFullYear();

    // תפריט המבורגר
    const burger = document.querySelector('.burger');
    const menu = document.getElementById('main-menu');
    burger?.addEventListener('click', ()=>{
      const open = menu.classList.toggle('open');
      burger.setAttribute('aria-expanded', open ? 'true' : 'false');
      burger.setAttribute('aria-label', open ? 'סגירת תפריט' : 'פתיחת תפריט');
    });
    menu?.querySelectorAll('a').forEach(a=>{
      a.addEventListener('click', ()=>{
        menu.classList.remove('open'); burger?.setAttribute('aria-expanded','false');
        burger?.setAttribute('aria-label','פתיחת תפריט');
      });
    });

    // קרוסלה
    const carousel = document.getElementById('carousel');
    const track = document.getElementById('track');
    const slides = Array.from(track?.children || []);
    const prev = document.getElementById('prev');
    const next = document.getElementById('next');
    const dots = document.getElementById('dots');
    let index = 0;

    function updateCarousel(){
      const w = track.parentElement.clientWidth;
      track.style.transform = `translateX(-${index * w}px)`;
      Array.from(dots.children).forEach((d,i)=>d.classList.toggle('active', i===index));
      slides.forEach((s,i)=>s.setAttribute('aria-selected', i===index ? 'true' : 'false'));
    }
    function createDots(){
      slides.forEach((_,i)=>{
        const d = document.createElement('div');
        d.className = 'dot' + (i===0 ? ' active' : '');
        d.addEventListener('click', ()=>{ index = i; updateCarousel(); });
        dots.appendChild(d);
      });
    }
    function nextSlide(){ index = (index + 1) % slides.length; updateCarousel(); }
    function prevSlide(){ index = (index - 1 + slides.length) % slides.length; updateCarousel(); }
    next?.addEventListener('click', nextSlide);
    prev?.addEventListener('click', prevSlide);
    window.addEventListener('resize', updateCarousel);
    if (slides.length){ createDots(); updateCarousel(); setInterval(nextSlide, 5000); }

    // וידאו: אוטופליי + חסכון נתונים
    const bgVideo = document.getElementById('bgVideo');
    if(bgVideo){
      bgVideo.muted = true;
      const tryPlay = ()=> bgVideo.play().catch(()=>{});
      document.addEventListener('visibilitychange', tryPlay, {once:true});
      tryPlay();

      const conn = navigator.connection || navigator.webkitConnection;
      const lowData = conn && (['slow-2g','2g'].includes(conn.effectiveType) || conn.saveData);
      if (lowData) {
        bgVideo.removeAttribute('src');
        const sources = bgVideo.querySelectorAll('source');
        sources.forEach(s=>s.remove());
        const isMobile = matchMedia('(max-width: 780px)').matches;
        bgVideo.setAttribute('poster', isMobile ? 'assets/img/hero-poster-mobile.jpg' : 'assets/img/hero-poster.jpg');
        bgVideo.load();
      }
    }

    // גלילה חלקה מכפתור הגלילה השקוף
    document.getElementById('scrollCue')?.addEventListener('click', ()=>{
      document.getElementById('lead')?.scrollIntoView({behavior:'smooth', block:'start'});
    });

    // שינוי אטימות ההדר אחרי יציאה מההירו
    const headerEl = document.querySelector('header');
    const heroEl = document.querySelector('.hero');
    if (headerEl && heroEl && 'IntersectionObserver' in window){
      const io = new IntersectionObserver(entries=>{
        entries.forEach(e=>{
          headerEl.style.background = e.isIntersecting
            ? 'transparent'
            : 'linear-gradient(180deg, rgba(0,0,0,.55), rgba(0,0,0,0))';
        });
      }, {root:null, threshold:0.01});
      io.observe(heroEl);
    }

    // GA4 helper (יטען רק אם מוגדר gtag)
    function gtagEvent(name, params){ window.gtag && gtag('event', name, params); }
    ['waTop','waHero','waBtn','waServices'].forEach(id=>{
      document.getElementById(id)?.addEventListener('click', ()=>gtagEvent('whatsapp_click',{location:id}));
    });

    // אנימציות reveal כלליות
    (function(){
      const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      const selectors = [
        '.container > h2','.panel','.carousel','.actions','#services li',
        '.hero .chip','.hero h1','.hero p','.hero .actions','.hero .badges',
        '.compare-wrap'
      ];
      const nodes = document.querySelectorAll(selectors.join(','));
      nodes.forEach((el, i) => {
        el.classList.add('reveal');
        if (i % 4 === 1) el.classList.add('delay-1');
        if (i % 4 === 2) el.classList.add('delay-2');
        if (i % 4 === 3) el.classList.add('delay-3');
      });
      if (prefersReduced) {
        nodes.forEach(el => el.classList.add('in'));
        document.getElementById('lead')?.classList.add('in-view');
        return;
      }
      const io = new IntersectionObserver((entries) => {
        entries.forEach(entry => { if (entry.isIntersecting) { entry.target.classList.add('in'); io.unobserve(entry.target); } });
      }, { threshold: 0.12, rootMargin: '0px 0px -10% 0px' });
      nodes.forEach(el => io.observe(el));
    })();

    // הופעת #lead
    (function(){
      const lead = document.getElementById('lead');
      if(!lead || !('IntersectionObserver' in window)) return;
      const ioLead = new IntersectionObserver((entries)=>{
        entries.forEach(en=>{
          if(en.isIntersecting){
            lead.classList.add('in-view');
            ioLead.unobserve(lead);
          }
        });
      }, {threshold: 0.12, rootMargin: '0px 0px -5% 0px'});
      ioLead.observe(lead);
    })();

    // השוואת לפני/אחרי — לוגיקה
    document.querySelectorAll('.compare').forEach(c=>{
      const after = c.querySelector('.after');
      const slider = c.querySelector('.slider');
      slider?.addEventListener('input', e=>{
        const v = Number(e.target.value);
        after.style.clipPath = `inset(0 ${100-v}% 0 0)`;
      });
    });
	
// מעביר את #lead לסוף העמוד (לפני ה-footer) במובייל ומחזיר בדסקטופ
(function(){
  const lead   = document.getElementById('lead');
  const footer = document.querySelector('footer');
  const beforeAfter = document.getElementById('beforeafter');
  if (!lead || !footer) return;

  // מיקום מקורי לדסקטופ
  const originalParent = lead.parentNode;
  const originalNext   = lead.nextElementSibling;

  const mq = window.matchMedia('(max-width: 780px)');

  function forceVisible(){
    // ביטחון נוסף: לוודא שהסקשנים גלויים אחרי כל הזזה
    [lead, beforeAfter].forEach(sec=>{
      if(!sec) return;
      sec.style.opacity   = '1';
      sec.style.transform = 'none';
      sec.style.filter    = 'none';
      sec.classList.add('in-view');
      sec.querySelectorAll('.reveal').forEach(el=>{
        el.style.opacity   = '1';
        el.style.transform = 'none';
        el.style.filter    = 'none';
        el.classList.add('in');
      });
    });
  }

  function relocate(e){
    const isMobile = e ? e.matches : mq.matches;

    if (isMobile) {
      // להזיז לסוף (ממש לפני ה-footer) – לא נשאר רווח במקום כי אנחנו מזיזים את אותו node
      if (lead.nextElementSibling !== footer) {
        footer.parentNode.insertBefore(lead, footer);
      }
    } else {
      // להחזיר למקום המקורי בדסקטופ
      if (originalParent) {
        if (originalNext && originalNext.parentNode === originalParent) {
          originalParent.insertBefore(lead, originalNext);
        } else {
          originalParent.appendChild(lead);
        }
      }
    }
    forceVisible();
  }

  relocate();
  (mq.addEventListener ? mq.addEventListener('change', relocate)
                       : mq.addListener(relocate));
})();
  
</script>
</body>
</html>
